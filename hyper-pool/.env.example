# =====================================
# HYPER POOL - Environment Variables
# =====================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!

# --------------------------------------
# Privy Authentication Configuration
# --------------------------------------
# Get your App ID from: https://dashboard.privy.io
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id_here

# IMPORTANT: Server-side only! Never expose in client code
# Get your App Secret from Privy Dashboard
PRIVY_APP_SECRET=your_privy_app_secret_here

# --------------------------------------
# Blockchain Configuration
# --------------------------------------
# HyperEVM Chain ID (Official: 999)
NEXT_PUBLIC_CHAIN_ID=999

# HyperEVM RPC Endpoint
NEXT_PUBLIC_RPC_URL=https://rpc.hyperliquid.xyz/evm

# --------------------------------------
# Hyperbloom API Configuration
# --------------------------------------
# Get your API key from Hyperbloom team
NEXT_PUBLIC_HYPERBLOOM_API_KEY=your_hyperbloom_api_key_here

# Hyperbloom API Base URL
NEXT_PUBLIC_HYPERBLOOM_API_URL=https://api.hyperbloom.io

# --------------------------------------
# Optional: Analytics & Monitoring
# --------------------------------------
# NEXT_PUBLIC_ANALYTICS_ID=
# NEXT_PUBLIC_SENTRY_DSN=

# --------------------------------------
# Development Settings
# --------------------------------------
# Set to 'development' for mock data fallbacks
# NODE_ENV=development